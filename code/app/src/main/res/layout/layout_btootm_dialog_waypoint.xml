<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_sheet_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/waypoint_bottom_disalog_sheet"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        android:text="WayPoint Information"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:gravity="clip_horizontal|center"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/routeNameLabelWaypoint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="10px"
            android:text="WAYPOINT NAME" />

        <TextView
            android:id="@+id/routeDescLabelWayPoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20px"
            android:text="WayPoint Descriprion" />

        <ImageView
            android:id="@+id/bottom_sheet_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:padding="10dp"
            android:scaleType="fitStart"
            android:src="@drawable/defaultpointimg" />

        <Button
            android:id="@+id/bottom_sheet_dismiss_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/black"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="@string/dismiss"
            android:textColor="@color/white"
            android:textAllCaps="true"
            />


    </LinearLayout>


</LinearLayout>